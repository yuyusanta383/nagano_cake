<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
　<header class shadow-sm><nav class = "navbar navbar-expand-lg navbar-light">
    <div class="container">
     <nav class="nav navbar-nav navbar-left">
      <%= link_to "/" do %>
      ながのCAKE
      <% end %>
     </nav>
  　<div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto">
    <% if customer_signed_in? %>
      <li>ようこそ、<%= current_customer.name %>さん！</li>
      <li><%= link_to "マイページ",public_customers_show_path, class: 'nav-link text-dark' %></li>
      <li><%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %></li>
      <li><%= link_to "カート", public_cart_items_path, class: 'nav-link text-dark'%></li>
      <li><%= link_to "ログアウト",destroy_customer_session_path,class: 'nav-link text-dark', method: :delete %></li>
    <% elsif admin_signed_in? %>
      <li> <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark' %></li>
      <li> <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark' %></li>
      <li> <%= link_to "注文履歴一覧", admin_orders_path(order_sort: 0), class: 'nav-link text-dark' %></li>
      <li> <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark' %></li>
      <li><%= link_to "ログアウト", destroy_admin_session_path,class: 'nav-link text-dark', method: :delete %></li>
      <% else %>
    <li class="nav-item">
     <%= link_to "About",about_path, class: 'nav-link text-dark' %>
    </li>
    <li class= "nav-item">
     <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
    </li>
    <li class= "nav-item">
     <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
     <%=link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %>
    </li>
     <% end %>
    </ul>
    </div>
    </div>
  </nav>
</header>
<main>
<%= yield %>
</main>
<footer>

</footer>
</body>
</html>
