<body>

<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <h4 class="bg-light text-black">新規登録会員登録</h4>
 </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
   
  <div class="field">
     <span><label for="fast_name">名前</label>(姓)　
    <%= f.text_field :first_name, autofocus: true %> (名)<%= f.text_field :last_name, autofocus: true %></span>
  </div>
  
  <div class= "field">
    <span><label for="kana_fast_name">フリガナ</label>
    (セイ)<%= f.text_field :first_name_kana, autofocus: true %>（メイ）<%= f.text_field :last_name_kana, autofocus: true %>
    </span>
  </div> 
  
  
   
  <div class="field">
    <span><label for="email">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </span>
  </div>
  
  <div class="field">
    <span><label for="postal_code">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, autofocus: true %></span>
  </div>
  
  <div class="field">
    <span><label for="address">住所</label>
    <%= f.text_field :address, autofocus: true %></span>
  </div>
  
  <div class="field">
    <span><label for="phone_number">電話番号</label>
    <%= f.text_field :phone_number, autofocus: true %></span>
  </div>
  
  <div class="field">
    <label for="password">パスワード（6文字以上）
    <% if @minimum_password_length %>
  
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label for="password">パスワード（確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <h4 class="text-center bg-light text-black">既に登録済みの方</h4></br>
   <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
  </div>
 </div> 
</div>
<footer>
  <div class="container">
   
  </div>
</footer>



