<div class="container">
 <h2>注文履歴一覧</h2><br>
 <table class="table table-hover">
 <tr>
   <th>注文日</th>
   <th>配送先</th>
   <th>注文商品</th>
   <th>ステータス</th>
   <th>注文詳細</th>
  </tr>
 <% @order.each do |order| %>
 <tr>
  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
  <td><%= order.address %></td>
  <td><%= @item.name %></td>
  <td><%= order.status %></td>
  <td><%= link_to "表示する", public_order_path(order),class:"btn btn-success" %></td>
 </tr>
 <% end %>
</div>