<h2>注文情報確認</h2>
<table border="1">
  
   <tr> 
  <thead>
   <tr>
    <th>商品名</th>
    <th>単価</th>
    <th>数量</th>
    <th>小計</th>
   </tr>
  </thead>
  <tbody>
   <% @cart_items.each do |cart_item| %>
    <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= (cart_item.item.price * 1.1).floor %></td>
    <td><%= cart_item.amount %></td>
    <td><%= (cart_item.item.price * cart_item.amount * 1.1).floor %></td>
   </tr>
  <% end %> 
  </tbody>
</table>
<table border="1">
 <thead>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求金額</th>
 </thead>
 <tbody>
   <tr>
    <td>800</td>
   <% @cart_items.each do |cart_item| %>
   <% @sum += (cart_item.item.price * cart_item.amount * 1.1).floor %>
   <% end %>
    <td><%= @sum %> </td>
    <td><%= @sum + 800 %></td>
  </tr> 
 </tbody>
 
</table></br>
<h2>支払方法</h2>
 <%= @order.payment_method %>
<h2>お届け先</h2>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %>
<%= form_for(@order,url: public_orders_path, method: :POST) do |f| %>
 <%= f.hidden_field :customer_id ,:value => current_customer.id %>
 <%= f.hidden_field :payment_method ,:value => @order.payment_method %>
 <%= f.hidden_field :shipping,:value => 800 %>
 <%= f.hidden_field :address,:value => @order.address %>
 <%= f.hidden_field :postal_code,:value => @order.postal_code %>
 <%= f.hidden_field :name,:value => @order.name %>
 <%= f.hidden_field :payment,:value => @sum %>
		<br><br>
 <%= f.submit '注文を確定する', class:"btn btn-success" %>
<% end %>
