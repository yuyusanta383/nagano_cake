<div class="container">
<h3>配送先登録/一覧</h3>
<%= form_for(@shipping_address, url: public_addresses_path, method: :POST) do |f| %>
 <div class="field">
    <span><label for="postal_code">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, autofocus: true %></span>
  </div>
  <div class="field">
    <span><label for="address">住所</label>
    <%= f.text_field :address, autofocus: true %></span>
  </div>
  <div class="field">
    <span><label for="address">宛名</label>
    <%= f.text_field :name, autofocus: true %></span>
    <%= f.submit "新規登録" , class:"btn btn-primary" %> 
  </div>
  
  <% end %>
  <table class="table table-hover table-inverse">
  <thead>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
  </thead>
   <tbody>
   <% current_customer.addresses.each do |address| %>
   <tr>
    <th><%= address.postal_code %></th>
    <th><%= address.address %></th>
    <th><%= address.name %></th>
    <th><%= link_to "編集する", edit_public_address_path(address.id),class: "btn btn-primary" %>
    <%= link_to "削除する", public_address_path(address.id), method: :delete, "data-confirm" => "Are you sure?",class: "btn btn-primary" %></th>
   <% end %>
   </tr>