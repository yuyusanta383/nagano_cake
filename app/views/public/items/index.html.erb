<div class="container">
 <div class="row">
  <div class="mx-auto col-xs-1">
   </div>
  <div class="mx-auto col-xs-9">
   <h2><i class="fas fa-cookie-bite"></i>商品一覧<span style="font-size:20px;">（全<%= @items.count %>件）</span></h2><br>
    <div class="row">
     <% @items.each do |item| %>
     <div class="box" style="float:left; margin-right:20px;">
     <%= link_to public_item_path(item.id) do %>
      <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %></tr>
     <% end %>
      <p><%= item.name %></p>
      <P>￥<%= (item.price * 1.1).floor %>  </P>
     </div> 
      <% end %>
    </div>
 <%= paginate @items %>
  
</div>
 
 