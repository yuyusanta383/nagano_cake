<h2>商品新規登録</h2>
<!--form_with部分-->
<%= form_for @item do |f| %>

 <h4>商品画像</h4>
 <%= f.attachment_field :image %></span>
 <h4>商品名</h4>
 <%= f.text_field :name %>
 <h4>商品説明</h4>
 <%= f.text_area :introduction %>
<h4>ジャンル</h4>
<%# コメントアウト　<%= f.select :genre_id %> 
 <h4>税抜き価格</h4>
 <%= f.number_field :price %>円
 <h4>販売ステータス</h4>
 <%= f.select :is_active, {'販売中': 1, '販売停止': 2},{ class: 'form-control' , required: true } %>
  
 <h4><%= f.submit '新規登録' %></h4>
 
 <% end %>