<div class="container">
<h2>商品編集</h2>

<%= form_for(@item,url: admin_item_path, html: {method: 'PATCH'}) do |f| %>
<div class="row">
 
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
 </div>
 <h4>商品名</h4>
 <%= f.text_field :name %>
 
 <h4>商品説明</h4>
 <%= f.text_area :introduction %>
<h4>ジャンル</h4>
<%= f.collection_select(:genre_id, @genres, :id, :name ) %>
 <h4>税抜き価格</h4>
 <%= f.number_field :price %>円
 <h4>販売ステータス</h4>
 <label><%= f.radio_button :is_active, "販売中" %> 販売中 </label>
 <label><%= f.radio_button :is_active, "販売停止" %>販売停止  </label>
 <div><%= f.submit '変更を保存',class: "btn btn-primary" %></div>
 
 <% end %>
 
 </div>